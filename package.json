{
  "name": "react-with-observable",
  "publishConfig": { "registry": "https://npm.pkg.github.com/" },
  "version": "3.0.0",
  "description": "Use Observables with React declaratively!",
  "main": "build/index.common.js",
  "browser": "build/index.js",
  "unpkg": "build/index.js",
  "module": "build/index.esm.js",
  "types": "build/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:mmiszy/react-with-observable.git"
  },
  "bugs": {
    "url": "https://github.com/mmiszy/react-with-observable/issues"
  },
  "homepage": "https://github.com/mmiszy/react-with-observable#readme",
  "scripts": {
    "build": "rimraf build && rollup -c",
    "test": "npm-run-all -p test:coverage test:types",
    "test:ci": "npm-run-all test",
    "test:e2e": "npm-run-all build:examples -p --race serve:examples test:cypress",
    "test:e2e:ci": "npm-run-all build:examples -p --race serve:examples test:cypress:ci",
    "test:types": "tslint -c ./tslint.json --project ./tsconfig.json",
    "test:cypress": "cypress run --record",
    "test:cypress:ci": "cypress run --record --parallel --ci-build-id=$BUILD_ID",
    "test:coverage": "jest --detectLeaks --coverage",
    "build:examples": "webpack --config examples/webpack.config.js --mode production",
    "serve:examples": "http-server ./examples -a localhost -p 8082 -c-1",
    "start:examples": "webpack-dev-server --config examples/webpack.config.js",
    "deploy:examples": "npm run build:examples && gh-pages --dist examples",
    "release": "np --no-yarn",
    "prepare": "npm run build",
    "postdeploy": "npm run deploy:examples"
  },
  "keywords": [],
  "author": "Micha≈Ç Miszczyszyn <michal@mmiszy.pl> (https://typeofweb.com/)",
  "license": "ISC",
  "devDependencies": {
    "@cypress/webpack-preprocessor": "4.1.0",
    "@types/chai": "4.2.4",
    "@types/create-subscription": "16.4.2",
    "@types/enzyme": "3.10.3",
    "@types/enzyme-adapter-react-16": "1.0.5",
    "@types/jest": "24.0.18",
    "@types/react-dom": "16.9.0",
    "codecov": "3.5.0",
    "create-subscription": "16.9.0",
    "cypress": "3.4.1",
    "danger": "9.2.0",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "gh-pages": "2.1.1",
    "git-revision-webpack-plugin": "3.0.3",
    "http-server": "0.11.1",
    "husky": "3.0.5",
    "jest": "24.9.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.1",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "rimraf": "3.0.0",
    "rollup": "1.21.2",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-typescript2": "0.24.1",
    "rxjs": "6.5.3",
    "source-map-support": "0.5.13",
    "symbol-observable": "1.2.0",
    "ts-jest": "24.0.2",
    "ts-loader": "6.0.4",
    "ts-node": "8.3.0",
    "tslint": "5.19.0",
    "typescript": "3.6.3",
    "typestrict": "1.0.2",
    "weak": "1.0.1",
    "webpack": "4.39.3",
    "webpack-cli": "3.3.8",
    "webpack-dev-server": "3.8.0"
  },
  "peerDependencies": {
    "react": "^16.9.0",
    "create-subscription": "^16.9.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
